@model IEnumerable<MInhaViagem.Models.Produto>
<header id="navbar">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active" data-interval="10000">
                <img src="~/images/example2.jpg" class=" img-fluid d-block w-100" alt="...">
            </div>
            <div class="carousel-item" data-interval="2000">
                <img src="~/images/familia.jpg" class="img-fluid d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="~/images/example3.jpg" class="img-fluid d-block w-100" alt="...">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</header>
<section id="corpo">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <img src="images/@item.NomeDaImagem" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Thumbnail">
                    <div class="card-body">
                        <p class="card-text">@item.Descricao.</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <button onmouseover="mudaParaGif('caribe','images/caribe-gif.gif')" onmouseout="mudaParaGif('caribe','images/caribe.jpg')" type="button" class="btn btn-sm btn-outline-secondary">View</button>
                                <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                            </div>
                            <small class="text-muted">9 mins</small>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>

